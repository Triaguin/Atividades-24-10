import java.util.Scanner;
public class Ativ11 {
	public static void main(String[] args) {
		Scanner ler = new Scanner(System.in);
			final int TAM = 10;
			int a[], x; //X = numero requisitado
			a = new int [TAM];
			
			//Entrada de dados
			System.out.println("Vector A");
			for (int i=0; i<TAM; i++) {
				a[i] = ler.nextInt();
			}
			// Digitar o numero para pesquisar
			 System.out.println("Escreva um numero para pesquisar");
			 x = ler.nextInt();
			 
			 //Pesquisa
			 for (int i = 0 ; i<TAM ; i++) {
				 if (x == a[i]) { // Verificar se o numero X se em encontra em A
					 System.out.println("Dado encontrado, na "+(i+1)+" linha"); // (i+1) Para corrigir o i
					 
				 }
			 }
			 ler.close();
}
}
